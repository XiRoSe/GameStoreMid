@model GameStoreMid.Models.Deal

@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = "/Views/Dashboard/_Layout.cshtml";
}
<h2>Edit</h2>

<h4>Deals</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DealID" />
            <div class="form-group">
                <label asp-for="PercentageDiscount" class="control-label"></label>
                <input asp-for="PercentageDiscount" class="form-control" />
                <span asp-validation-for="PercentageDiscount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
